<div class="container">
  <% breadcrumb :post_edit, @post %>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'layouts/errors', obj: @post %>
      <%= form_with model: @post,local:true do |f| %>
        <div class="form-group mt-3">
          <%= attachment_image_tag @post, :image, :fill, 200, 200 %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group mt-3">
          <%= f.text_field :title, placeholder: "タイトル", class: 'form-control' %>
        </div>
        <div class="form-group mt-3">
          <%= f.text_area :caption, placeholder: "コメント", class: 'form-control' %>
        </div>
        <div class="form-group mt-3">
          作品URL　<small>ロケ地が使われた作品の公式サイトなど</small>
          <%= f.text_field :url, placeholder: "http:○○○○.jp", class: 'form-control' %>
        </div>
        <div class="form-group mt-3">
          住所　<small>訪れたロケ地の住所</small>
          <%= f.text_field :address, placeholder: "東京都○○区", class: 'form-control' %>
        </div>
        <div class="form-group mt-3">
          タグ　<small>タグとタグの間は半角スペースを入れてください</small>
          <%= f.text_field :tag_name, value: @tags, placeholder: "映画 実写映画", class: 'form-control' %>
        </div>
        <div class="form-group mt-3 text-center">
          <%= f.submit '保存', class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>