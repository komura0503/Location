<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorites_path(post), method: :delete, class: "favorite-btn", remote: true do %>
      ♥<%= post.favorites.count %>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to post_favorites_path(post), method: :post, class: "favorite-btn", remote: true do %>
      ♡<%= post.favorites.count %>
    <% end %>
  </p>
<% end %>