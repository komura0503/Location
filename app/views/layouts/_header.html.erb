<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand mb-0 h1" href="/">Location</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= render 'searches/form' %>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item mr-3">
              <%= link_to '新規投稿', new_post_path %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">マイメニュー</a>
              <div class="dropdown-menu">
                <a class="dropdown-item">
                  <%= link_to user_path(current_user.id) do %>
                    <%= attachment_image_tag current_user, :profile_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg" %>
                    <%= current_user.name %>
                  <% end %>
                </a>
                <a class="dropdown-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></a>
              </div>
            </li>
          <% else %>
            <li class="nav-item mr-3">
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to "ログイン", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>
</header>