<div class="container">
  <div class="row">
    <h2 class="offset-4 text-right">検索結果</h2>
    <p class="d-flex align-items-end"><%= @posts.count %>件</p>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-9 offset-1">
      <div class="card-deck">
        <% @posts.each do |post| %>
          <div class="col-4 mt-5">
            <div class="card">
             <%= link_to post_path(post.id) do %>
              <div class="card-img-top">
                <%= attachment_image_tag post, :image, :fill, 178, 120 %>
              </div>
              <div class="card-body">
               <h5 class="card-title"><%= post.title %></h5><% end %>
               <p class="card-text"><%= link_to post.user.name, user_path(post.user.id) %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="offset-6 mt-5">
      <%= paginate @post_pages %>
    </div>
  </div>
</div>